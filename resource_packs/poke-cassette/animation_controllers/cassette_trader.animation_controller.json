{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.poke_cassette.cassette_trader.baby": {
      "initial_state": "baby",
      "states": {
        "baby": {
          "animations": [
            {
              "baby_transform": "query.is_baby"
            }
          ]
        }
      }
    },
    "controller.animation.poke_cassette.cassette_trader.general": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": [
            "general",
            {
              "look_at_target": "!query.is_sleeping"
            }
          ]
        }
      }
    },
    "controller.animation.poke_cassette.cassette_trader.move": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": [
            {
              "move": "query.modified_move_speed"
            }
          ]
        }
      }
    }
  }
}